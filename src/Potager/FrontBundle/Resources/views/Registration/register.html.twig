{% extends 'PotagerFrontBundle::layout.html.twig' %}


{% block content %}
{% trans_default_domain 'FOSUserBundle' %}

<div id="header">
    <img id="logo"
        src="{{ asset('bundles/potagerbusiness/images/logo.png') }}"
        alt="Garden War" />
</div>
<form action="{{ path('fos_user_registration_register', {"factionName": factionName }) }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    <div id="banner" class="{{ factionName|lower }}">
        <div id="about_game">
            {% if factionName == "Kiwi" %}
            <p>Killwome !!!!!</p>
            {% else %}
            <p>Bienvenue dans le 4Ã©me Reich</p>
            {% endif %}
            <p class="msg-error">{{ form_errors(form) }}</p>
            <p class="marge-p">
                {{ form_label(form.username) }}
                {{ form_errors(form.username) }}
                {{ form_widget(form.username) }}
            </p>
        </div>
    </div>
    <p> {{ form_errors(form) }}</p>
    <div>
        {{ form_label(form.email) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email) }}
    </div>
        <div>
        {{ form_label(form.plainPassword) }}
        {{ form_errors(form.plainPassword) }}
        {{ form_widget(form.plainPassword) }}
    </div>
    <div>
        {{ form_label(form.avatar) }}
        {{ form_errors(form.avatar) }}
        {% for child in form.avatar %}
            <p class="test">{{ form_widget(child) }} <label for="{{child.vars.id}}" ><img src={{ asset(child.vars.label) }} /> </label></p>
        {% endfor %}
    </div>
    <div>
        {{form_row(form._token)}}
        <input type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>
{% endblock %}