{% trans_default_domain 'FOSUserBundle' %}
<form action="{{ path('fos_user_registration_register', {"factionName": factionName }) }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
     

    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword) }}
    {% for child in form.avatar %}
    <div>
        <p class="test">{{ form_widget(child) }} <label for="{{child.vars.id}}" ><img src={{ asset(child.vars.label) }} /> </label></p>
    </div>
    {% endfor %}
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>